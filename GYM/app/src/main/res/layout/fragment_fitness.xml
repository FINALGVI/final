<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/agregarfitness_fragment">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_fitness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="#FFF"
                app:cardCornerRadius="6px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imagenAgua"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:src="@drawable/ic_agenda"
                        android:tint="#FF5733" />

                    <TextView
                        android:id="@+id/nombreAgua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/imagenAgua"
                        android:text="Introduce la cantidad de vasos de agua tomado"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/CantidadAgua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombreAgua"
                        android:layout_marginLeft="55dp"
                        android:layout_toRightOf="@id/btnAgua_menos" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btnAgua_mas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombreAgua"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/imagenAgua"
                        android:clickable="true"
                        android:src="@android:drawable/ic_menu_add" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btnAgua_menos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombreAgua"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/btnAgua_mas"
                        android:clickable="true"
                        android:src="@android:drawable/ic_menu_rotate" />
                </RelativeLayout>
            </android.support.design.card.MaterialCardView>

            <android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv2_fitness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="#FFF"
                app:cardCornerRadius="6px"
                app:layout_constraintBottom_toTopOf="@+id/cv3_fitness"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_fitness">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imagenPeso"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:src="@drawable/ic_agenda"
                        android:tint="#FF5733" />

                    <TextView
                        android:id="@+id/nombrePeso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/imagenPeso"
                        android:text="Introduce tu peso"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/editPeso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombrePeso"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="13dp"
                        android:layout_toRightOf="@id/btnPeso"
                        android:hint="Introduce tu peso"
                        android:textAlignment="center" />

                    <Button
                        android:id="@+id/btnPeso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombrePeso"
                        android:layout_marginLeft="10dp"
                        android:text="Guardar"
                        android:layout_marginTop="27dp"
                        android:layout_toRightOf="@id/imagenPeso" />

                </RelativeLayout>
            </android.support.design.card.MaterialCardView>

            <android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv3_fitness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:background="#FFF"
                app:cardCornerRadius="6px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imagenDormir"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:src="@drawable/ic_agenda"
                        android:tint="#FF5733" />

                    <TextView
                        android:id="@+id/nombreDormir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/imagenDormir"
                        android:text="Introducir la canidad de horas dormidas"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/CantidadDormir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombreDormir"
                        android:layout_marginLeft="55dp"
                        android:layout_toRightOf="@id/btnDormir_menos" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btnDormir_mas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombreDormir"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/imagenDormir"
                        android:clickable="true"
                        android:src="@android:drawable/ic_menu_add" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btnDormir_menos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombreDormir"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/btnDormir_mas"
                        android:clickable="true"
                        android:src="@android:drawable/ic_menu_rotate" />

                </RelativeLayout>
            </android.support.design.card.MaterialCardView>


        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</RelativeLayout>
